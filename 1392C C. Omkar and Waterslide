#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
 
int main()
{
    int t, n, a[200005];
    cin>>t;
    while(t--)
    {
        cin>>n;
        for(int i=0 ;i<n ; i++) cin>>a[i];
        ll ans=0;
        int mem=a[0];
        for(int i=1 ; i<n ; i++){
            if(a[i]<mem){
                ans += (mem-a[i]);
                swap(mem, a[i]);
            }
            else{
                mem = a[i];
            }
        }
        cout<<ans<<"\n";
    }
 
 
 
return 0;
}
