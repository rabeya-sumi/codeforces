#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
vector<ll>a;
 
 
int main()
{
    ll n, k, x, aa, slipts=1;
    cin>>n>>k>>x;
    for(int i=0 ; i<n ; i++){
        cin>>aa;
        a.push_back(aa);
    }
    sort(a.begin(), a.end());
    vector<ll>vk;
    for(int i=1 ; i<a.size() ; i++){
        if(a[i]-a[i-1]>x){
            slipts++;
            ll p = (a[i]-a[i-1]-1)/x;
            vk.push_back(p);
        }
    }
    sort(vk.begin() , vk.end());
    for(int i=0 ; i<vk.size() ; i++){
        if(k-vk[i]>=0){
            slipts--;
            k -= vk[i];
        }
        else break;
    }
    cout<<slipts<<"\n";
 
return 0;
}
