#include<bits/stdc++.h>
using namespace std;
#define MAX 1010
int n;
vector<int>g[MAX+3];
vector< pair<int,int> >euler;
set<int> s;
set<int>::iterator it;
int visited[MAX];
void dfs(int nd)
{
    visited[nd]=1;
    for(int i=0 ; i<g[nd].size() ; i++){
        if(visited[g[nd][i]]==0){
            euler.push_back(make_pair(nd, g[nd][i]));
            dfs(g[nd][i]);
        }
    }
}
int main()
{
    int  u, v;
    cin>>n;
    for(int i=1; i<n ; i++)
    {
        cin>>u>>v;
        g[u].push_back(v);
        g[v].push_back(u);
    }
    memset(visited, 0, sizeof visited);
    dfs(1);
    cout<<"? "<<n<<' ';
    for(int i=1 ; i<=n ; i++) cout<<i<<' ';
    cout<<'\n';
    int ans;
    cin>>ans;
    memset(visited, 0, sizeof visited);
    int l=0, r=n-1;
    while(l<r)
    {
        int mid = (l+r)/2;
        int c=0;
        for(int i=l ; i<=mid ; i++){
            if(!visited[euler[i].first]) visited[euler[i].first]=1, c++;
            if(!visited[euler[i].second]) visited[euler[i].second]=1, c++;
        }
        cout<<"? "<<c<<" ";
        for(int i=l ; i<=mid ; i++){
            if(visited[euler[i].first]) visited[euler[i].first]=0, cout<<euler[i].first<<' ';
            if(visited[euler[i].second]) visited[euler[i].second]=0, cout<<euler[i].second<<' ';
        }
        cout<<"\n";
        int take;
        cin>>take;
        if(take==ans) r=mid;
        else          l=mid+1;
 
    }
    cout<<"! "<<euler[l].first<<" "<<euler[l].second<<"\n";
 
 
return 0;
}
